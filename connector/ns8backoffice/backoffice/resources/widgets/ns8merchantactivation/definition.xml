    <defaultTitle>NS8 Activate Merchant Widget</defaultTitle>
    <author>ns8</author>
    <version>1.0</version>

    <view src="ns8merchantactivation.zul"/>

    <sockets>
        <input id="baseSiteInput" type="de.hybris.platform.basecommerce.model.site.BaseSiteModel"/>
        <output id="cancel" type="java.lang.Object"/>
        <output id="merchantActivated" type="java.lang.Object"/>
    </sockets>

    <controller
